                  <TextField fx:id="pasajeros_label" alignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="ciudad_llegada_field" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="destino_field" alignment="CENTER" visible="false" GridPane.columnIndex="1" />
                  <TextField fx:id="salida_field" alignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="ciudad_salida_field" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="fecha_salida_field" alignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="aceptarButtonVuelo" mnemonicParsing="false" text="Aceptar" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Button fx:id="aceptarButtonDestino" mnemonicParsing="false" text="Aceptar" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
