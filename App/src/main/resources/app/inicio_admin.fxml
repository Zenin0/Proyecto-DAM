   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fitHeight="326.0" fitWidth="332.0" layoutX="4.0" layoutY="74.0" pickOnBounds="true" preserveRatio="true">
