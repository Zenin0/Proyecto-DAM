                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="destino" contentDisplay="CENTER" text="Destino" textAlignment="CENTER" visible="false" />
                  <Label fx:id="ciudad_salida" contentDisplay="CENTER" text="Nombre Ciudad" textAlignment="CENTER" visible="false" GridPane.rowIndex="1" />
                  <Label fx:id="salida" contentDisplay="CENTER" text="Salida" textAlignment="CENTER" visible="false" GridPane.rowIndex="1" />
                  <Label fx:id="fecha_salida" contentDisplay="CENTER" text="Fecha de Salida" textAlignment="CENTER" visible="false" GridPane.rowIndex="2" />
