<?import javafx.scene.layout.VBox?>

<VBox minHeight="600.0" minWidth="900.0" stylesheets="@css/home_ad.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.InicioAdminController">
   <children>
      <GridPane prefHeight="494.0" prefWidth="612.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="nombreCiudad" contentDisplay="CENTER" text="Nombre Ciudad" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="nombrePais" contentDisplay="CENTER" text="Nombre Pais" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="aceptarButtonCiudad" mnemonicParsing="false" text="Aceptar" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <TextField fx:id="nombreCiudadField" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="nombrePaisField" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button fx:id="aceptarButtonAvion" mnemonicParsing="false" text="Aceptar" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <TextField fx:id="nombreAvionField" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="nombreAvion" contentDisplay="CENTER" text="Nombre del Avion" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="anyoFabricacionField" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Label fx:id="anyoFabricacion" contentDisplay="CENTER" text="Año Fabricación" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="ciudadSalidaVuelo" contentDisplay="CENTER" text="Ciudad Salida" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="ciudadDestinoVuelo" contentDisplay="CENTER" text="Ciudad Destino" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="avionVuelo" contentDisplay="CENTER" text="Avion" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <SplitMenuButton fx:id="menuCiudadesSalida" mnemonicParsing="false" text="Ciudades" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <SplitMenuButton fx:id="menuCiudadesDestino" mnemonicParsing="false" text="Ciudades" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <SplitMenuButton fx:id="menuAviones" mnemonicParsing="false" text="Aviones" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Button fx:id="aceptarButtonVuelo" mnemonicParsing="false" text="Aceptar" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <Label fx:id="capacidad" contentDisplay="CENTER" text="Capacidad" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="capacidadField" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <DatePicker fx:id="fechaSelect" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Label fx:id="fechaLabel" contentDisplay="CENTER" text="Fecha Salida" textAlignment="CENTER" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ListView fx:id="vuelosList" prefHeight="200.0" prefWidth="200.0" visible="false" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="4">
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </ListView>
            <Button fx:id="deleteButton" mnemonicParsing="false" text="Eliminar" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <ImageView fitHeight="401.0" fitWidth="382.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2">
               <image>
                  <Image url="@css/logo.png" />
               </image>
            </ImageView>
            <SplitMenuButton fx:id="menu" mnemonicParsing="false" text="Gestión" GridPane.rowIndex="1">
              <items>
                <MenuItem fx:id="addVuelo" mnemonicParsing="false" text="Añadir Vuelo" />
                <MenuItem fx:id="addCiudad" mnemonicParsing="false" text="Añadir Ciudad" />
                  <MenuItem fx:id="addAvion" mnemonicParsing="false" text="Añadir Avión" />
                  <MenuItem fx:id="delVuelo" mnemonicParsing="false" text="Eliminar Vuelo" />
              </items>
            </SplitMenuButton>
            <Label styleClass="h1" text="Gestion Administrativa" wrapText="true" GridPane.columnIndex="1" />
            <Button fx:id="endSession" mnemonicParsing="false" text="Cerrar Sesión" GridPane.rowIndex="4" />
         </children>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </GridPane>
   </children>
</VBox>
